{
  "compilerOptions": {
    
    "target": "es2016",     
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,    
    "module": "commonjs",                               
    "moduleResolution": "node",                       
    "baseUrl": "./src",                                 
    "paths": {
        "@modules/*":["Modules/*"],
        "@config/*":["config/*"],
        "@shared/*":["Shared/*"],
        "@erros/*":["Errors/*"],
        "@utils/*":["utils/*"]
    },        
    "resolveJsonModule": true,       
    "esModuleInterop": true,      
    "forceConsistentCasingInFileNames": true,   
    "strict": true,  
    "skipLibCheck": true                               
  }
}
